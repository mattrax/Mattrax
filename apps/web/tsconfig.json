{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"composite": false,
		"jsx": "preserve",
		"noEmit": true,
		"jsxImportSource": "solid-js",
		"types": ["vinxi/client", "vite/client", "@mattrax/ui/types"],
		"moduleResolution": "Bundler",
		"paths": {
			"~/*": ["./src/*"],
			"~c/*": ["./src/components/*"],
			"~dash/*": ["./src/app/(dash)/*"],
			"~[orgSlug]/*": ["src/app/(dash)/[orgSlug]/*"],
			"~[tenantSlug]": ["src/app/(dash)/[orgSlug]/t.[tenantSlug].tsx"],
			"~[tenantSlug]/*": ["src/app/(dash)/[orgSlug]/t.[tenantSlug]/*"]
		}
	},
	"include": ["src/"],
	"exclude": ["node_modules", "dist"],
	"references": [
		{ "path": "../../packages/ui" },
		{ "path": "../../packages/email" },
		{ "path": "../../packages/trpc-server-function" },
		{ "path": "../../packages/policy" },
		{ "path": "../../packages/policy-composer" }
	]
}
