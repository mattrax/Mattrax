{
  "name": "@mattrax/monorepo",
  "private": true,
  "scripts": {
    "postinstall": "node patches/solid-start-ts-nocheck",
    "dev": "pnpm --filter @mattrax/forge dev",
    "landing": "pnpm --filter @mattrax/landing --",
    "email": "pnpm --filter @mattrax/email --",
    "db:push": "drizzle-kit push:mysql && bun run ./packages/api/src/db/rust.ts",
    "db:studio": "drizzle-kit studio",
    "db:gen": "bun run ./packages/api/src/db/rust.ts",
    "typecheck": "tsc -b"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "dotenv": "^16.4.3",
    "drizzle-kit": "^0.20.14",
    "mysql2": "^3.9.1",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@solid-mediakit/trpc@1.0.2": "patches/@solid-mediakit__trpc@1.0.2.patch",
      "drizzle-kit@0.20.14": "patches/drizzle-kit@0.20.14.patch"
    }
  }
}
