{
	"name": "@mattrax/monorepo",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "pnpm --filter @mattrax/web dev",
		"landing": "pnpm --filter @mattrax/landing --",
		"configure": "pnpm --filter @mattrax/configure --",
		"ingest": "pnpm --filter @mattrax/ingest --",
		"doc": "pnpm --filter @mattrax/docs --",
		"web": "pnpm --filter @mattrax/web --",
		"infra": "pnpm --filter @mattrax/infra exec sst",
		"db:push": "drizzle-kit push && bun run ./apps/web/src/db/rust.ts",
		"db:gen": "drizzle-kit generate && bun run ./apps/web/src/db/rust.ts",
		"db:studio": "drizzle-kit studio",
		"db:rs": "bun run ./apps/web/src/db/rust.ts",
		"typecheck": "tsc -b",
		"lint": "biome lint .",
		"fix": "biome lint --config-path biome.fix.json --apply . || biome format --write .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=18",
		"pnpm": "^9"
	},
	"dependencies": {
		"@biomejs/biome": "^1.7.3",
		"@solidjs/start": "1.0.0-rc.1",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.21.2",
		"pg": "^8.11.5",
		"typescript": "^5.4.5",
		"vinxi": "^0.3.11"
	},
	"devDependencies": {
		"husky": "^9.0.11"
	},
	"resolutions": {
		"drizzle-orm": "^0.30.8"
	},
	"pnpm": {
		"patchedDependencies": {
			"@solidjs/router@0.13.3": "patches/@solidjs__router@0.13.3.patch",
			"@tanstack/solid-form@0.19.5": "patches/@tanstack__solid-form@0.19.5.patch",
			"drizzle-orm@0.30.10": "patches/drizzle-orm@0.30.10.patch",
			"@react-email/tailwind@0.0.16": "patches/@react-email__tailwind@0.0.16.patch",
			"nitropack@2.9.6": "patches/nitropack@2.9.6.patch",
			"@solid-mediakit/trpc@3.0.2": "patches/@solid-mediakit__trpc@3.0.2.patch",
			"@solidjs/start@1.0.0-rc.1": "patches/@solidjs__start@1.0.0-rc.1.patch"
		}
	}
}
