{
  "files": [],
  "references": [{ "path": "./forge" }, { "path": "./packages/policy" }],
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "isolatedModules": true,
    "composite": true,
    "skipLibCheck": true
  }
}
